<Window x:Class="DeweyDirectory.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeweyDirectory"
        mc:Ignorable="d"
        Title="Splash" Height="300" Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        xmlns:gif ="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        Background="Transparent" AllowsTransparency="True">

    <!--Custom grid for formatting-->
    <Grid Height="300" Width="300">

        <!--Set background image-->
        <Image x:Name="image" gif:AnimationBehavior.SourceUri="Resources/splashDD.gif" 
               HorizontalAlignment="Left" Height="300" Width="300"/>

        <Label Foreground="White" Content="LOADING..." FontSize="15" FontWeight="Bold" Style="{StaticResource PixeledFontStyle}"  HorizontalAlignment="Center" Margin="0,238,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
